<p id="notice"><%= notice %></p>

<h1>Film Lists</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Film</th>
      <th>Date discussed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @film_lists.each do |film_list| %>
      <tr>
        <td><%= film_list.group_id %></td>
        <td><%= film_list.film_id %></td>
        <td><%= film_list.date_discussed %></td>
        <td><%= link_to 'Show', film_list %></td>
        <td><%= link_to 'Edit', edit_film_list_path(film_list) %></td>
        <td><%= link_to 'Destroy', film_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

